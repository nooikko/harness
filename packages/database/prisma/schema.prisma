// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ── Orchestrator Models ─────────────────────────────────────────────────

model Thread {
  id             String     @id @default(cuid())
  source         String
  sourceId       String
  name           String?
  kind           String     @default("general")
  status         String     @default("open")
  parentThreadId String?
  parentThread   Thread?    @relation("ThreadChildren", fields: [parentThreadId], references: [id])
  children       Thread[]   @relation("ThreadChildren")
  messages       Message[]
  tasks          OrchestratorTask[]
  agentRuns      AgentRun[]
  lastActivity   DateTime   @default(now())
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@unique([source, sourceId])
  @@index([status, lastActivity])
}

model Message {
  id        String   @id @default(cuid())
  threadId  String
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  role      String
  content   String   @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([threadId, createdAt])
}

model OrchestratorTask {
  id               String             @id @default(cuid())
  threadId         String
  thread           Thread             @relation(fields: [threadId], references: [id], onDelete: Cascade)
  parentTaskId     String?
  parentTask       OrchestratorTask?  @relation("TaskChildren", fields: [parentTaskId], references: [id])
  children         OrchestratorTask[] @relation("TaskChildren")
  status           String             @default("pending")
  prompt           String             @db.Text
  result           String?            @db.Text
  maxIterations    Int                @default(3)
  currentIteration Int                @default(0)
  agentRuns        AgentRun[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt

  @@index([threadId, status])
}

model AgentRun {
  id           String            @id @default(cuid())
  threadId     String
  thread       Thread            @relation(fields: [threadId], references: [id], onDelete: Cascade)
  taskId       String?
  task         OrchestratorTask? @relation(fields: [taskId], references: [id])
  model        String
  inputTokens  Int               @default(0)
  outputTokens Int               @default(0)
  durationMs   Int               @default(0)
  status       String            @default("running")
  error        String?           @db.Text
  startedAt    DateTime          @default(now())
  completedAt  DateTime?

  @@index([threadId, startedAt])
  @@index([taskId])
}

model CronJob {
  id        String    @id @default(cuid())
  name      String    @unique
  schedule  String
  prompt    String    @db.Text
  enabled   Boolean   @default(true)
  lastRunAt DateTime?
  nextRunAt DateTime?
  threadId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([enabled, nextRunAt])
}

model Metric {
  id        String   @id @default(cuid())
  name      String
  value     Float
  tags      Json?
  threadId  String?
  createdAt DateTime @default(now())

  @@index([name, createdAt])
  @@index([threadId])
}
